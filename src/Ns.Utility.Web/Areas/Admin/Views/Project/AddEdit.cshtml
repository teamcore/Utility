@model Ns.Utility.Web.Areas.Admin.Models.ProjectModel
@{
    ViewBag.Title = "AddEdit";
}

<div class="panel panel-default form-top">
    <div class="panel-heading">
        <h3 class="panel-title">Projects</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("AddEdit", "Project", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            if(!Model.IsNew)
            {
                <div class="form-group">
                @Html.LabelFor(x => x.Id, new { @class = "col-md-2 control-label" })
                <div class="col-md-5">
                    @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            }
            <div class="form-group">
                @Html.LabelFor(x => x.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-5">
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Enter Project Name" })
                    @Html.ValidationMessageFor(x => x.Name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Code, new { @class = "col-md-2 control-label" })
                <div class="col-md-5">
                    @Html.TextBoxFor(x => x.Code, new { @class = "form-control", placeholder = "Enter Project Code" })
                    @Html.ValidationMessageFor(x => x.Code)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Description, new { @class = "col-md-2 control-label" })
                <div class="col-md-5">
                    @Html.TextAreaFor(x => x.Description, 3, 3, new { @class = "form-control", placeholder = "Enter Project Code" })
                    @Html.ValidationMessageFor(x => x.Description)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-5">
                    <button type="submit" class="btn btn-default">Submit</button>
                    @Html.ActionLink("Cancel", "List", "Project", null, new { area = "Admin", @class = "btn btn-default" })
                </div>
            </div>
        }
    </div>
</div>

