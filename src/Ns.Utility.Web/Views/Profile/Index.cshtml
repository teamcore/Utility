@model Ns.Utility.Web.Models.UserModel
@using Ns.Utility.Web.Framework.Security
@using System.Security.Claims
@{
    ViewBag.Title = "AddEdit";
}
@{
    IUserSession session = new UserSession(User as ClaimsPrincipal);
}
<div class="form-top">
    @using (Html.BeginForm("Index", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="well well-sm">
            <div class="row">
                <div class="col-md-12">
                    <div class="pull-right">
                        @Html.ActionLink("Edit", "Edit", "Profile", null, new { area = "Admin", @class = "btn btn-sm btn-primary" })
                    </div>
                </div>
            </div>
        </div>
        
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Aprimo Resource</h3>
            </div>
            <div class="panel-body">
                @if (!Model.IsNew)
                {
                <div class="form-group">
                    @Html.LabelFor(x => x.Id, new { @class = "col-md-2 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                }
                <div class="form-group">
                    @Html.LabelFor(x => x.Domain, new { @class = "col-md-2 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(x => x.Domain, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(x => x.Domain)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.UserName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(x => x.UserName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.FirstName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(x => x.FirstName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.LastName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(x => x.LastName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.ProjectName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(x => x.ProjectName, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(x => x.ProjectName)
                    </div>
                </div>
            </div>
        </div>
    }
</div>