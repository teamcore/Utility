@model Ns.Utility.Web.Models.ScriptModel
@{
    ViewBag.Title = "Preview";
}

<div class="form-top">
    <div class="well well-sm">
        <div class="row">
            <div class="col-md-12">
                <div class="pull-right">
                    <button id="previewExport" class=" btn btn-sm btn-primary">Export</button>
                    @Html.ActionLink("Back", "List", "Resource", null, new { area = "", @class = "btn btn-sm btn-primary" })
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default view-port">
        <div class="panel-heading">
            <h3 class="panel-title">Script Preview</h3>
        </div>

        <div class="panel-body">

            <pre>@Model.Script</pre>
        </div>

        @using (Html.BeginForm("Export", "Resource", FormMethod.Post, new { @class = "hidden", id = "formExport" }))
        {
            for (int i = 0; i < Model.ResourceIDs.Count; i++)
            {
                @Html.Hidden("ids[" + i + "]", Model.ResourceIDs[i])
            }
        }
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/preview")
}